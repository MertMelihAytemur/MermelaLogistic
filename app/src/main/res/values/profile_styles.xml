<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="FormSpinnerStyle">
        <item name="fontFamily">@string/tlv_default_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/rounded_rectangle_card_view_background</item>
    </style>

    <style name="AdressSpinnerStyle">
        <item name="fontFamily">@string/tlv_default_font</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/rounded_rectangle_card_view_background</item>
    </style>


    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:colorBackground">@color/purple_main</item>
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>


</resources>